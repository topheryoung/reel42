---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const mixtapes = await getCollection('mixtapes');
const { mixtape } = Astro.params;

export async function getStaticPaths() {
  const mixtapes = await getCollection('mixtapes');
  
  return mixtapes.map((item) => ({
    params: { mixtape: item.slug },
  }));
}

// Find the mixtape data based on the URL parameter
const mixtapeData = mixtapes.find((item) => item.slug === mixtape);

if (!mixtapeData) {
  throw new Error(`Mixtape "${mixtape}" not found`);
}

const { title, genre, href, cover, alt, id } = mixtapeData.data;
---

<Layout title={`Reel42 | ${title}`}`>
  <main class="mixtape-container">
    <div class="mixtape-cover cover-art">
      <Image src={cover} alt={alt} class="cover-image" />
    </div>
    <div class="mixtape-details">
      <a href="/">back</a>
      <h1 class="card-title">{title}</h1>
      <div class="card-details">
        <h3 class="card-id">ID: {id}</h3>
        <h3>Genres: {genre.join(', ')}</h3>
      </div>
      <p><a href={href} target="_blank" rel="noopener noreferrer">Listen here</a></p>
    </div>
  </main>
</Layout>


<style>
  .mixtape-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
    margin: 0 auto;
    padding: 64px;
  }

  .mixtape-details {
    display: flex;
    flex-direction: column;
    gap: 12px;
    justify-content: center;
    color: var(--primary-text);
  }

  .card-title {
    font-size: 16px;
    margin-bottom: 6px;
  }

  .card-details {
    display: flex;
    justify-content: space-between;
    color: var(--secondary-text);
    font-size: 12px;
    margin: 6px auto 12px;
  }

  .card-details h3 {
    margin: 0;
    font-weight: 400;
  }

  .card-id {
    color: var(--accent-text);
    font-family: 'Space Mono', monospace;
  }

  .mixtape-cover {
    background: var(--card-bg);
    padding: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cover-image {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  a {
    text-decoration: none;
    color: var(--primary-text);
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .mixtape-container {
      grid-template-columns: 1fr;
    }
    .mixtape-details,
    .mixtape-cover {
      text-align: center;
    }
  }
</style>
